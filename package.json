{
  "name": "travis-shields-docs",
  "version": "1.0.0",
  "description": "A sample project for testing and configuring TravisCI with mocha/chai and status shields",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Frédérique Mittelstaedt <git@gfm.io> (www.gfm.io)",
  "license": "MIT",
  "private": true,
  "keywords": [
    "typescript",
    "test",
    "testing",
    "mocha",
    "chai",
    "travis",
    "ci",
    "codecov",
    "code climate",
    "snyk",
    "example",
    "code",
    "coverage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gfmio/travis-shields-docs.git"
  },
  "bugs": {
    "url": "https://github.com/gfmio/travis-shields-docs/issues"
  },
  "homepage": "https://github.com/gfmio/travis-shields-docs#readme",
  "scripts": {
    "prebuild": "npm-run-all clean:lib",
    "build": "tsc",
    "pretest": "npm-run-all build clean:test",
    "test": "nyc -r lcov -e .ts -x \"*.test.ts\" mocha -r ts-node/register tests/**/*.test.ts",
    "posttest": "npm-run-all posttest:print posttest:lcov posttest:json",
    "posttest:print": "nyc report",
    "posttest:lcov": "nyc report --reporter=lcov",
    "posttest:json": "nyc report --reporter=json",
    "lint": "tslint --project tsconfig.json",
    "docs": "typedoc",
    "clean:lib": "rimraf ./lib",
    "clean:node_modules": "rimraf ./node_modules",
    "clean:test": "rimraf ./.nyc_output ./coverage",
    "clean:docs": "rimraf ./docs",
    "clean:all": "npm-run-all clean:lib clean:node_modules clean:test clean:docs"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "codecov": "^3.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
